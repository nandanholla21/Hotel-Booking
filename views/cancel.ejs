<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel-Booking | Cancel Booking</title>
    <link rel="icon"  href="img/Hotel-Booking.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="process.js"></script>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" /> 
    <link href="styles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="card price col-sm-12 col-md-12 col-lg-6" style="width: 28rem;">
                <form method="POST" action="/cancelbooking">
                    <div class="card-body">
                        <h5 class="card-title">Enter the details of your Booking</h5>
                        <p style="margin-top:3%;"></p>
                        <input type="email" placeholder="Enter email-id" name="Email">
                        <table class="check">
                            <tr>
                              <td><input id="init" type="date" name="checkin" value="" min=""></td>
                              <td><input id="exi" type="date" name="checkout" value="" min=""></td>
                            </tr>
                            <tr>
                              <p style="margin-top:10%;"></p>
                              <td>Check In</td>
            
                              <td>Check Out</td>
                            </tr>
                          </table>
                          <button type="submit" class="btn btn-danger btn-large" name="index" value="<%=val%>">Cancel Booking</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    let v = new Date();
    let year = v.getFullYear();
    let month = v.getMonth()+1;
    if(month <=9){
      month="0"+month;
    }
    let day = v.getDate();
    if(day <=9){
      day="0"+day;
    }
    let s = year+"-"+month+"-"+day;
    document.getElementById("init").value = s;
    document.getElementById("init").min = s;
    const tomorrow = new Date(v);
    tomorrow.setDate(tomorrow.getDate() + 1);
    let y = tomorrow.getFullYear();
    let m = tomorrow.getMonth()+1;
    if(m <=9){
      m="0"+m;
    }
    let d = tomorrow.getDate();
    if(d <=9){
      d="0"+d;
    }
    let ne = y+"-"+m+"-"+d;
    document.getElementById("exi").value = ne;
    document.getElementById("exi").min = ne;
  </script>