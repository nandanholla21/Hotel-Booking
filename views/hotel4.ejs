<script>
  let v = new Date();
  let year = v.getFullYear();
  let month = v.getMonth()+1;
  if(month <=9){
    month="0"+month;
  }
  let day = v.getDate();
  if(day <=9){
    day="0"+day;
  }
  let s = year+"-"+month+"-"+day;
  document.getElementById("init").value = s;
  const tomorrow = new Date(v);
  tomorrow.setDate(tomorrow.getDate() + 1);
  let y = tomorrow.getFullYear();
  let m = tomorrow.getMonth()+1;
  if(m <=9){
    m="0"+m;
  }
  let d = tomorrow.getDate();
  if(d <=9){
    d="0"+d;
  }
  let ne = y+"-"+m+"-"+d;
  document.getElementById("exi").value = ne;
</script>